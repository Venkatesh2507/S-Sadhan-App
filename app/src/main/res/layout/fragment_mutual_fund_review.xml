<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MFReviewFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/upperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/purple_sip_background"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="53dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/back_filled"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/help"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/help_transparent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/review_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/help"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/companyProfile2"
                    android:layout_width="93dp"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    android:background="@drawable/logo_background"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/aditya_birla"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:scaleType="fitCenter"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/tv_scheme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/companyProfile2"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Aditya Birla Sun life Equity Advantage\nFund Growth"
                    android:textSize="15sp"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inder"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toBottomOf="@+id/companyProfile2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <LinearLayout
                        android:id="@+id/typeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ruler1"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/inder"
                            />
                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Largecap"
                            android:textStyle="bold"
                            android:textColor="#32ADE6"
                            android:background="@drawable/textview_review_blue_background"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:layout_marginTop="10dp"
                            />

                    </LinearLayout>
                    <View
                        android:id="@+id/ruler1"
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:background="#E0E0E0"
                        app:layout_constraintStart_toEndOf="@+id/typeLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="25dp"
                        />
                    <LinearLayout
                        android:id="@+id/riskLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/ruler1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ruler2"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Risk"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/inder"
                            />
                        <TextView
                            android:id="@+id/tv_risk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High"
                            android:textStyle="bold"
                            android:textColor="@color/pink"
                            android:background="@drawable/textview_background_high"
                            android:paddingHorizontal="30dp"
                            android:paddingVertical="5dp"
                            android:layout_marginTop="10dp"
                            />

                    </LinearLayout>
                    <View
                        android:id="@+id/ruler2"
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:background="#E0E0E0"
                        app:layout_constraintStart_toEndOf="@+id/riskLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="25dp"
                        />
                    <LinearLayout
                        android:id="@+id/navLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/ruler2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NAV"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/inder"
                            />
                        <TextView
                            android:id="@+id/tv_nav_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234.56"
                            android:textColor="@color/black"
                            android:background="@drawable/textview_nav_background"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:layout_marginTop="10dp"
                            />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reviewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/upperLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="20dp"
            android:background="@drawable/smart_sip_background"
            >

            <LinearLayout
                android:id="@+id/categoryLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inder"
                    />
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equity"
                    android:textSize="16sp"
                    android:fontFamily="@font/inder"
                    android:layout_gravity="center"
                    />




            </LinearLayout>
            <LinearLayout
                android:id="@+id/aumLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryLayout"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUM (Rs. Cr)"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inder"
                    />
                <TextView
                    android:id="@+id/tv_aum_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234.56"
                    android:textSize="16sp"
                    android:fontFamily="@font/inder"
                    android:layout_gravity="center"
                    />




            </LinearLayout>
            <View
                android:id="@+id/ruler3"
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:background="#E0E0E0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"


                />
            <LinearLayout
                android:id="@+id/dateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Launch Date"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inder"
                    />
                <TextView
                    android:id="@+id/tv_launch_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-05-2018"
                    android:textSize="16sp"
                    android:fontFamily="@font/inder"
                    android:layout_gravity="center"
                    />




            </LinearLayout>
            <LinearLayout
                android:id="@+id/investmentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateLayout"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min. Investment"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inder"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="16sp"
                    android:fontFamily="@font/inder"
                    android:layout_gravity="center"
                    />




            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/riskoMeterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/riskometer_banner_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewLayout">

            <ImageView
                android:layout_width="276dp"
                android:layout_height="134dp"
                android:layout_gravity="center"
                android:src="@drawable/risk_meter" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_amc_list"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/andImage"
                android:background="@drawable/riskometer_background"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/riskoMeterLayout"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_sip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/button_gradient"
                android:text="Start SIP"
                android:fontFamily="@font/inder"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:paddingVertical="15dp"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_lumpsum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_gradient"
                android:text="Lumpsum"
                android:fontFamily="@font/inder"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:paddingVertical="15dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>